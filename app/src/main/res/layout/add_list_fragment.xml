<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddListF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E4DA"
    android:backgroundTint="#F8E2E4"
    android:orientation="vertical"
    tools:context=".addList.AddListFragment">

    <TextView
        android:id="@+id/addNote"
        android:layout_width="254dp"
        android:layout_height="43dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="76dp"
        android:background="#EEF3F4"
        android:backgroundTint="#F9E2E4"
        android:fontFamily="@font/architects_daughter_regular"
        android:text="@string/add_the_note"
        android:textAlignment="center"
        android:textColor="#592630"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editeNote"
        android:layout_width="278dp"
        android:layout_height="116dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#F6EDED"
        android:ems="10"
        android:fontFamily="@font/architects_daughter_regular"
        android:hint="@string/what_do_you_want_to_do"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#572830"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/isDone"
        app:layout_constraintTop_toBottomOf="@+id/addNote" />

    <Button
        android:id="@+id/dateBTN"
        android:layout_width="166dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="232dp"
        android:backgroundTint="#E0515C"
        android:fontFamily="@font/architects_daughter_regular"
        android:text="@string/date"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addToList"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="232dp"
        android:backgroundTint="#E0515C"
        android:fontFamily="@font/architects_daughter_regular"
        android:text="@string/added_to_list"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/isDone"
        android:layout_width="266dp"
        android:layout_height="50dp"
        android:layout_marginBottom="368dp"
        android:fontFamily="@font/architects_daughter_regular"
        android:text="isDone"
        android:textAlignment="center"
        android:textColor="#582730"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/descrItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</androidx.constraintlayout.widget.ConstraintLayout>