<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:animationCache="false"
    android:background="#E1E1E1"
    android:backgroundTint="#FFFFFF"
    tools:context=".StartFragment.StartFragment">

    <TextView
        android:id="@+id/helloText"
        android:layout_width="614dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/architects_daughter_regular"
        android:text="@string/helloText"
        android:textAlignment="center"
        android:textColor="#572830"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LIstBTN"
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#572830"
        android:fontFamily="@font/architects_daughter_regular"
        android:text="@string/list"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/AddListBTN"
        android:layout_width="243dp"
        android:layout_height="54dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="#572830"
        android:fontFamily="@font/architects_daughter_regular"
        android:text="@string/add_list"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="331dp"
        android:layout_height="172dp"
        android:adjustViewBounds="false"
        android:keyboardNavigationCluster="true"
        android:outlineProvider="bounds"
        android:scaleType="centerInside"
        android:src="@drawable/to_do"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />


</androidx.constraintlayout.widget.ConstraintLayout>